<h1>Candidates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Party</th>
    <th>Contest</th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%= candidate.name %></td>
    <td><%= candidate.party %></td>
    <td><%= Contest.find_by_id(candidate.contest_id).name %></td>
    <td><%= link_to 'Show', candidate %></td>
    <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Candidate', new_candidate_path %><br />
<%= link_to 'Elections', elections_path %><br />
<%= link_to 'Contests', contests_path %>
